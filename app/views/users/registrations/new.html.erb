<%= render 'shared/navigation' %>
<header class="text-center pt-5 mt-5">
  <h1 class="display-6 fw-bolder">新規登録</h1>
</header>
<div class="container px-4 px-lg-5 w-75 m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group my-3">
      <%= f.label :name, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :user_name, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :email, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :phone, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :birthdate, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.date_field :birthdate, autofocus: true, autocomplete: "birthdate", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :password, class: "mb-2 block text-sm text-gray-600"%>
      <% if @minimum_password_length %>
        (最小<%= @minimum_password_length %>文字)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group my-3">
      <%= f.label :password_confirmation, class: "mb-2 block text-sm text-gray-600" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    </div>
     <div class="actions text-center my-3">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
